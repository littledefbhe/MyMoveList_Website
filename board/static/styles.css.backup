    position: relative;
    display: inline-flex;
    align-items: center;
    background: rgba(0, 0, 0, 0.7);
    padding: 4px 10px;
    border-radius: 12px;
    font-weight: 600;
    color: #ffd700;
    margin-left: 5px;
    top: auto;
    right: auto;
    border: 1px solid rgba(255, 215, 0, 0.3);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
}

/* Consolidated star icon styles in the main .movie-rating i rule */

.movie-meta {
    display: flex;
    gap: 15px;
    margin-bottom: 15px;
    color: #aaa;
    font-size: 14px;
}

.certification {
    border: 1px solid #666;
    padding: 2px 6px;
    border-radius: 3px;
    font-size: 12px;
    color: #ccc;
}

.movie-actions {
    display: flex;
    gap: 10px;
    margin-bottom: 20px;
}

.btn-watchlist,
.btn-rate,
.btn-review {
    padding: 8px 16px;
    border: none;
    border-radius: 4px;
    font-weight: 600;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    gap: 5px;
}

.btn-watchlist {
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
}

.btn-rate {
    background: rgba(255, 255, 255, 0.05);
    color: #ccc;
    border: 1px solid #444;
}

.btn-review {
    background: var(--accent-color);
    color: white;
}

.btn-watchlist:hover {
    background: rgba(255, 255, 255, 0.15);
}

.btn-rate:hover {
    background: rgba(255, 255, 255, 0.1);
}

.btn-review:hover {
    background: var(--accent-hover);
}

.movie-description {
    margin: 15px 0;
    color: #ddd;
    line-height: 1.6;
    padding-right: 10px;
    flex-grow: 1;
    overflow-y: auto;
    max-height: 200px;
    scrollbar-width: thin;
    scrollbar-color: var(--text-muted) transparent;
}

.movie-description h4 {
    margin-bottom: 8px;
    font-size: 16px;
    position: sticky;
    top: 0;
    background: var(--card-bg);
    padding: 5px 0;
    z-index: 1;
    color: #fff;
    margin-top: 0;
}

.movie-description::-webkit-scrollbar {
    width: 6px;
}

.movie-description::-webkit-scrollbar-track {
    background: transparent;
}

.movie-description::-webkit-scrollbar-thumb {
    background-color: var(--text-muted);
    border-radius: 3px;
}

.movie-description::-webkit-scrollbar-thumb:hover {
    background-color: var(--text-light);
}

.movie-stats {
    display: flex;
    gap: 30px;
    margin-top: auto;
    padding-top: 15px;
    border-top: 1px solid #333;
}

.stat {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.stat-value {
    font-size: 18px;
    font-weight: 700;
    color: #fff;
}

.stat-label {
    font-size: 12px;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-top: 3px;
}

/* Responsive adjustments */
@media (max-width: 992px) {
    .movie-container {
        flex-direction: column;
    }
    
    .movie-poster-container {
        width: 100%;
        min-height: 400px;
    }
    
    .movie-details {
        padding: 20px;
    }
}

@media (max-width: 576px) {
    .movie-actions {
        flex-wrap: wrap;
    }
    
    .movie-meta {
        flex-wrap: wrap;
        gap: 10px;
    }
    
    .movie-stats {
        flex-wrap: wrap;
        gap: 15px;
}

.stat {
    flex: 1;
    min-width: 80px;
}

.genre {
    background: rgba(255, 255, 255, 0.1);
    padding: 2px 8px;
    border-radius: 10px;
    font-size: 12px;
}

/* Rank Badge */
.rank-badge {
    position: absolute;
    top: 15px;
    left: 15px;
    background-color: var(--rank-color);
    color: #000;
    font-weight: 900;
    font-size: 18px;
    width: 36px;
    height: 36px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    font-family: 'Montserrat', sans-serif;
}

/*
.movie-title {
    font-size: 18px;
    font-weight: 700;
    margin: 0 0 10px;
    color: var(--text-color);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 1.3;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.8);
    font-family: 'Montserrat', sans-serif;
    letter-spacing: 0.3px;
    transition: all 0.3s ease;
}
*/

.movie-title {
    font-size: 8px !important;
    font-weight: 400 !important;
    margin: 0 0 3px !important;
    color: var(--text-color) !important;
    line-height: 1.0 !important;
    display: -webkit-box !important;
    -webkit-line-clamp: 2 !important;
    -webkit-box-orient: vertical !important;
    overflow: hidden !important;
    text-overflow: ellipsis !important;
    max-height: 2.4em !important;
}

.movie-card:hover .movie-title {
    color: var(--accent-color);
}

.movie-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
    font-size: 13px;
    color: var(--text-light);
}

/* IMDB Ranking Badge */
.rank-badge {
    position: absolute;
    top: 15px;
    left: 15px;
    background-color: var(--rank-color);
    color: #000;
    font-weight: 900;
    font-size: 18px;
    width: 36px;
    height: 36px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3;
    box-shadow: 0 4px 10px rgba(0,0,0,0.3);
    font-family: 'Montserrat', sans-serif;
    transition: all 0.3s ease;
    transform: scale(0.9);
    opacity: 0.9;
}

.movie-card:hover .rank-badge {
    transform: scale(1.1);
    opacity: 1;
    box-shadow: 0 6px 15px rgba(0,0,0,0.4);
}

.rating {
    display: flex;
    align-items: center;
    color: var(--rank-color);
    font-weight: 700;
    font-size: 14px;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
}

.rating i {
    margin-right: 4px;
    font-size: 16px;
}

.genre {
    background-color: rgba(0, 0, 0, 0.5);
    color: var(--text-light);
    padding: 3px 8px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 500;
}

.rating i {
    margin-right: 4px;
}

.genre {
    font-size: 12px;
    color: var(--text-light);
    background-color: #f0f0f0;
    padding: 3px 8px;
    border-radius: 12px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.movie-description {
    font-size: 14px;
    color: var(--text-light);
    margin-bottom: 15px;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    flex-grow: 1;
}

.btn-details {
    background-color: var(--accent-color);
    color: white;
    border: none;
    padding: 8px 12px;
    border-radius: 4px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    text-align: center;
    transition: background-color 0.2s;
    margin-top: auto;
}

.btn-details:hover {
    background-color: #0940e55b;
}

/* Responsive Design */
@media (max-width: 992px) {
    .movie-list {
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 20px;
    }
    
    .movie-poster {
        height: 270px;
    }
}

/* Responsive Styles */
@media (max-width: 992px) {
    .hero {
        height: 60vh;
        min-height: 400px;
    }
    
    .hero h2 {
        font-size: 2.5rem;
    }
    
    .hero p {
        font-size: 1rem;
    }
    
    .movie-list {
        grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
        gap: 20px;
        padding: 0 20px;
    }
}

@media (max-width: 768px) {
    .header {
        flex-direction: column;
        padding: 15px 0;
        background-color: var(--primary-color);
        position: relative;
    }
    
    .search-bar {
        width: 100%;
        margin: 15px 0;
        padding: 0 20px;
    }
    
    .auth-buttons {
        padding: 10px 0;
        width: 100%;
        justify-content: center;
    }
    
    .hero {
        height: 50vh;
        min-height: 300px;
        text-align: center;
        justify-content: center;
    }
    
    .hero-content {
        padding: 0 20px;
    }
    
    .hero h2 {
        font-size: 2rem;
    }
    
    .movie-list {
        grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
        gap: 15px;
    }
    
    .header h1 {
        margin-bottom: 15px;
    }
    
    .search-bar {
        width: 100%;
        max-width: 100%;
        margin: 10px 0;
    }
    
    .auth-buttons {
        width: 100%;
        justify-content: center;
        padding: 10px 0 0;
    }
    
    .movie-list {
        grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
        gap: 15px;
    }
    
    .movie-poster {
        height: 240px;
    }
}

@media (max-width: 480px) {
    .movie-list {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .movie-poster {
        height: 200px;
    }
    
    /*
    .movie-title {
        font-size: 14px;
        height: 42px;
    }
    */
    
    .movie-description {
        font-size: 12px;
        -webkit-line-clamp: 2;
    }
    
    .btn-details {
        font-size: 12px;
        padding: 6px 10px;
    }
}

/* Main content area */
main {
  background-color: #000000;
  padding: 25px;
